<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/main_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_menu_left"
                android:layout_marginTop="@dimen/main_menu_top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_fragment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_menu_title_text"
                    android:textColor="@color/colorCreateWhite" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/main_menu_iv_left"
                    android:src="@drawable/pull_down_content" />
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_menu_left"
                android:layout_marginTop="@dimen/main_menu_left"
                android:src="@drawable/title_underline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_menu_left"
                android:layout_marginTop="@dimen/main_menu_text_top"
                android:text="@string/tuij"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/main_menu_text_size" />
        </com.zhy.autolayout.AutoLinearLayout>

        <android.support.v4.view.DirectionalViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <FrameLayout
        android:id="@+id/main_menu_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mirror_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/main_mirror_iv_bottom"
            android:layout_marginLeft="@dimen/main_mirror_iv_left"
            android:src="@drawable/mirror" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/main_mirror_iv_bottom"
            android:layout_marginRight="@dimen/main_login_iv_right"
            android:text="@string/main_login_text"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/main_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/main_mirror_iv_bottom"
            android:layout_marginRight="@dimen/main_login_iv_right"
            android:text="@string/main_shopping"
            android:textColor="@color/colorWhite"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
