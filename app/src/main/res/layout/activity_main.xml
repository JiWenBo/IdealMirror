<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/matlefttwo_two"
            android:layout_marginTop="@dimen/marop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/liulan"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/marleft_n"
                android:src="@drawable/pull_down_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/matlefttwo_two"
            android:layout_marginTop="@dimen/matlefttwo_two"
            android:src="@drawable/title_underline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/matlefttwo_two"
            android:layout_marginTop="@dimen/mattop_twosix"
            android:text="@string/tuij"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsizefive" />
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v4.view.DirectionalViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/mirrorpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/marbtmfour_eight"
        android:layout_marginLeft="@dimen/marleftfour_eight"
        android:src="@drawable/mirror" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/marbtmfour_eight"
        android:layout_marginRight="@dimen/marrigfour_eight"
        android:text="@string/denglu"
        android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/main_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/marbtmfour_eight"
        android:layout_marginRight="@dimen/marrigfour_eight"
        android:text="@string/main_shopping"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />

</com.zhy.autolayout.AutoRelativeLayout>
