<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_adorn_photos_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/recycler_adorn_photos_padding">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recycler_adorn_photos_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_adorn_photos_img_hei"
        fresco:actualImageScaleType="focusCrop"
        fresco:progressBarImage="@mipmap/icon_progress_bar"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="5000"/>
</com.zhy.autolayout.AutoLinearLayout>
