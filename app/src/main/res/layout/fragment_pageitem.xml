<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemx"
    android:layout_width="470px"
    android:layout_height="870px"
    >
<com.zhy.autolayout.AutoLinearLayout
    android:layout_marginRight="@dimen/marleft_twotwo"
    android:background="#fff"
    android:layout_width="470px"
    android:layout_height="870px"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/picture"
        android:layout_width="470px"
        android:layout_height="594px" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="470px"
        android:layout_height="238px"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoLinearLayout

            android:layout_marginTop="50px"
            android:layout_width="470px"
            android:layout_height="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="SEE CONCEPT"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:text="$450"
                android:layout_width="match_parent"
                android:layout_height="18dp" />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_marginLeft="32px"
            android:layout_marginTop="16px"
            android:textColor="#333"
            android:text="法国巴黎"
            android:textSize="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30px"
            android:src="@drawable/create_account_unline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="32px"
            android:layout_marginTop="16px"
            android:text="草莓红色圆框眼镜"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
