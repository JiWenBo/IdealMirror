<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/addAddress_layout_left"
    android:layout_marginRight="@dimen/addAddress_layout_right"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_title_top"
        android:layout_marginRight="@dimen/addAddress_title_right"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/addAddress_title_size"
            android:textColor="@color/colorBlack"
            android:text="@string/addAddress"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_titleUnderline_top"
        android:layout_gravity="center"
        android:background="@drawable/item_underline_black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_addName_top"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/addAddress_addName_size"
        android:text="@string/addReceiverName"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_addNameEt_top"
        android:textColor="@color/colorBlack"
        android:background="@drawable/phonenum_input"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_addPhone_top"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/addAddress_addPhone_size"
        android:text="@string/addContactPhone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_addPhoneEt_top"
        android:textColor="@color/colorBlack"
        android:background="@drawable/phonenum_input"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_addAddress_top"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/addAddress_addAddress_size"
        android:text="@string/addReceiverGoodsAddress"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_addAddressEt_top"
        android:textColor="@color/colorBlack"
        android:background="@drawable/address_input"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/addAddress_commitAddress_top"
        android:background="@drawable/create_account_true"
        android:textSize="@dimen/addAddress_commitAddress_size"
        android:gravity="center"
        android:text="@string/commitAddress"/>
</LinearLayout>
