<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_commodity_details_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recycler_commodity_details_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commodity_item_item_pic_hei"
        android:layout_margin="@dimen/commodity_item_title_sdv_margin"
        fresco:actualImageScaleType="focusCrop"
        fresco:progressBarImage="@mipmap/icon_progress_bar"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="5000" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/recycler_commodity_details_story_layout"
        android:layout_width="@dimen/commodity_item_item_story_wid"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_commodity_details_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/commodity_details_layout_top"
        android:background="@color/colorBlack"
        android:orientation="vertical"
        android:paddingLeft="@dimen/commodity_item_item_story_left"
        android:paddingRight="@dimen/commodity_item_item_story_right">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commodity_item_head_line_hei"
            android:layout_marginTop="@dimen/commodity_item_head_line_top"
            android:background="@drawable/title_underline" />

        <TextView
            android:id="@+id/recycler_commodity_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/commodity_item_item_name_top"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/commodity_item_item_name_size" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commodity_item_head_line_hei"
            android:layout_marginTop="@dimen/commodity_item_title_under_top"
            android:background="@drawable/title_underline" />

        <TextView
            android:id="@+id/recycler_commodity_details_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/commodity_item_item_intro_bot"
            android:layout_marginTop="@dimen/commodity_item_item_intro_top"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/commodity_item_item_intro_size" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
