<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/mrtj_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_menu_left"
            android:layout_marginTop="@dimen/main_menu_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mrtj_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_menu_title_text"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/main_menu_iv_left"
                android:src="@drawable/pull_down_content" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_menu_left"
            android:layout_marginTop="@dimen/main_menu_left"
            android:src="@drawable/title_underline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_menu_left"
            android:layout_marginTop="@dimen/main_menu_text_top"
            android:text="@string/tuij"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/main_menu_text_size" />
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mrtj_recycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/good_recycler_height"
        android:layout_marginLeft="@dimen/good_recycler_left"
        android:layout_marginTop="@dimen/good_recycler_top" />

</com.zhy.autolayout.AutoLinearLayout>