<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fivepx">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginLeft="@dimen/fivepx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ListView
            android:id="@+id/popup_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixpxs"
            android:divider="@null" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/popup_to_home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_to_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourfour"
                android:text="@string/back"
                android:textColor="@drawable/selector_popup_item"
                android:textSize="@dimen/two" />

            <ImageView
                android:id="@+id/popup_to_home_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twos"
                android:src="@drawable/title_underline"
                android:visibility="invisible" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/popup_return_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popup_return_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fourfours"
                android:text="@string/close"
                android:textColor="@drawable/selector_popup_item"
                android:textSize="@dimen/twoehi" />

            <ImageView
                android:id="@+id/popup_return_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twotwoss"
                android:src="@drawable/title_underline"
                android:visibility="invisible" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
