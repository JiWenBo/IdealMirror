<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="50px">

    <ListView
        android:id="@+id/popup_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/popup_to_home_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_to_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44px"
            android:text="返回首页"
            android:textColor="@drawable/selector_popup_item"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/popup_to_home_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:src="@drawable/title_underline"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_return_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_return_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44px"
            android:text="退出"
            android:textColor="@drawable/selector_popup_item"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/popup_return_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:src="@drawable/title_underline"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>
