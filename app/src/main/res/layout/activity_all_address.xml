<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="@dimen/activity_create_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的所有地址"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/create_title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/create_close_right"
            android:src="@drawable/close" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_unline_top"
        android:src="@drawable/create_account_unline" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginTop="50px"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        android:text="添加地址"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/allAddress_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
