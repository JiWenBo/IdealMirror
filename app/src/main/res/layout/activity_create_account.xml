<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="@dimen/activity_create_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_title"
            android:textColor="@color/colorCreateTest"
            android:textSize="@dimen/create_title_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/create_close_right"
            android:src="@drawable/close" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_unline_top"
        android:src="@drawable/create_account_unline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_phone_top"
        android:text="@string/create_phone_text"
        android:textColor="@color/colorCreateTest"
        android:textSize="@dimen/create_phone_size" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_edit_height"
        android:layout_marginTop="@dimen/create_phone_edit_top"
        android:background="@drawable/phonenum_input" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_verifi_text_top"
        android:text="@string/create_verifi_text"
        android:textColor="@color/colorCreateTest"
        android:textSize="@dimen/create_verifi_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_verifi_edit_height"
        android:layout_marginTop="@dimen/create_verifi_edit_top"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/phonenum_input" />

        <Button
            android:layout_width="@dimen/create_verifi_btn_width"
            android:layout_height="match_parent"
            android:background="@drawable/selector_create_verification_bg"
            android:text="@string/create_verifi_btn_text"
            android:textColor="@color/colorCreateWhite" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_setpw_text_top"
        android:text="@string/create_setpw_text"
        android:textColor="@color/colorCreateTest"
        android:textSize="@dimen/create_setpw_text_size" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_edit_height"
        android:layout_marginTop="@dimen/create_setpw_edit_top"
        android:background="@drawable/phonenum_input" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_btn_height"
        android:layout_marginTop="@dimen/create_btn_top"
        android:background="@drawable/selector_create_account"
        android:gravity="center"
        android:text="@string/create_btn_text"
        android:textColor="@color/colorCreateWhite"
        android:textSize="@dimen/create_btn_text_size" />
</LinearLayout>
